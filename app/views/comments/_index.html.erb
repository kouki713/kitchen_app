<div class="recipe-show">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
        	<div class="col-md-12">
        		<h3><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= comments.count %> 件のコメント</h3>
        	</div>
        	<table class="table comment">
            	<tbody>
            		<% comments.each do |comment| %>
            			<tr>
        		    		<td>
                                <%= link_to user_path(comment.user) do %>
                                    <%= attachment_image_tag(comment.user, :image, fallback: "no_image.jpg", size: '80x80', class: "img-circle") %>
                                <% end %>
                            </td>
        		    		<td><p><%= comment.user.name %>さん</p></td>
        		    		<td><p><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></p></td>
        		    		<td><p><%= comment.comment %></p></td>
        		    		<td>
        		    			<% if comment.user == current_user %>
        		    			<p><%= link_to "削除する", recipe_comment_path(comment.recipe_id, comment.id), method: :delete, remote: true, class: "btn btn-danger btn-md", "data-confirm" => "コメントを削除します。よろしいですか？" %></p>
        		    			<% end %>
        		    		</td>
        		    	</tr>
            		<% end %>
            	</tbody>
            </table>
        </div>
    </div>
</div>