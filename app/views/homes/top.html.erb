<div class="top-image">
	<div class="top-image-content">
		<div class="top-image-title">
			<h3>10分キッチン</h3>
		</div>
		<div class="top-image-modal-open">
			<h4>会員登録</h4>
			<h4>ログイン</h4>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 top-recipe-title">
            <h3>人気のレシピ</h3>
        </div>
		<div class="row">
			<% @like_recipes.each do |recipe|%>
				<%= link_to recipe_path(recipe) do %>
					<div class="col-md-4 col-xs-6 recipe-items">
						<div class="col-md-12 col-xs-12 recipes">
							<%= attachment_image_tag(recipe, :image, fallback: "no_image2.jpg", class: "img-responsive", style: "height: 250px;") %>
							<div class="row">
								<div class="col-md-12 col-xs-12">
									<h4><%= recipe.title %></h4>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 col-xs-12">
									<% recipe.tags.each do |tag| %>
										<span class="badge"> <%= tag.name %></span>
									<% end %>
									<h5><%= simple_format(recipe.body) %></h5>
								</div>
							</div>
							<div class="row">
								<div class="col-md-8 col-xs-8">
									<%= attachment_image_tag(recipe.user, :image, fallback: "no_image.jpg", size: '40x40', class: "img-circle") %>
									<%= recipe.user.name %>さん <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
								</div>
								<div class="col-md-4 col-xs-4">
									<p>
										<span class="glyphicon glyphicon-heart" style="color: tomato;"><%= recipe.likes.count %></span>&nbsp;
										<span class="glyphicon glyphicon-comment"><%= recipe.comments.count %></span>
									</p>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 top-recipe-title">
            <h3>新着レシピ</h3>
        </div>
		<div class="row">
			<% @recipes.each do |recipe|%>
				<div class="col-md-4 col-xs-6 recipe-items">
					<div class="col-md-12 col-xs-12 recipes">
						<%= link_to recipe_path(recipe) do %>
							<%= attachment_image_tag(recipe, :image, fallback: "no_image2.jpg", class: "img-responsive", style: "height: 250px;") %>
						<% end %>
						<div class="row">
							<div class="col-md-12 col-xs-12">
								<h4><%= recipe.title %></h4>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12 col-xs-12">
								<% recipe.tags.each do |tag| %>
									<span class="badge"> <%= tag.name %></span>
								<% end %>
								<h5><%= simple_format(recipe.body) %></h5>
							</div>
						</div>
						<div class="row">
							<div class="col-md-8 col-xs-8">
								<%= attachment_image_tag(recipe.user, :image, fallback: "no_image.jpg", size: '40x40', class: "img-circle") %>
								<%= recipe.user.name %>さん <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</div>
							<div class="col-md-4 col-xs-4">
								<p>
									<span class="glyphicon glyphicon-heart" style="color: tomato;"><%= recipe.likes.count %></span>&nbsp;
									<span class="glyphicon glyphicon-comment"><%= recipe.comments.count %></span>
								</p>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

