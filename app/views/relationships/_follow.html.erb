<% if user_signed_in? %>
    <% if user != current_user %>
  		<% if current_user.following?(user) %>
        	<p><%= link_to 'フォローを外す', user_relationships_path(user), method: :delete %></p>
        <% else %>
            <p><%= link_to 'フォローする', user_relationships_path(user.id), method: :post %></p>
        <% end %>
    <% end %>
<% end %>