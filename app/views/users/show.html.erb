<div class="container">
    <div class="row">
        <div class="col-md-6">
        	<%= attachment_image_tag(@user, :image, fallback: "no_image.jpg", size: '300x300') %>
        </div>
        <div class="col-md-6">
        	<p><%= @user.name %>さん</p>
        	<p><%= @user.introduction %></p>
        	<% if @user == current_user %>
        		<div class="col-md-6">
                    <%= link_to user_followed_path(@user) do %>
                        <p>フォロー　<%= @user.followed.count %></p>
                    <% end %>
                </div>
                <div class="col-md-6">
                    <%= link_to user_follower_path(@user) do %>
                        <p>フォロワー　<%= @user.follower.count %></p>
                    <% end %>
                </div>
                <div class="col-md-6">
                    <p><%= link_to "お気に入りレシピ", user_likes_path %></p>
                </div>
                <div class="col-md-6">
                    <p><%= link_to "会員情報を編集する", edit_user_path(@user) %></p>
                </div>
            <% else %>
                <div class="col-md-6">
                    <p>フォロー　<%= @user.followed.count %></p>
                </div>
                <div class="col-md-6">
                    <p>フォロワー　<%= @user.follower.count %></p>
                </div>
                <div class="col-md-6">
                    <% if current_user.following?(@user) %>
                        <%= link_to 'フォローを外す', user_relationships_path(@user), method: :delete %>
                    <% else %>
                        <%= link_to 'フォローする', user_relationships_path(@user), method: :post %>
                    <% end %>
                </div>
        	<% end %>
        </div>
        <div class="col-md-12 text-center">
        	<p><%= @user.name %>さんの投稿レシピ一覧</p>
        </div>
        <% @recipes.each do |recipe| %>
	        <%= link_to recipe_path(recipe.id) do %>
	        	<div class="col-md-4">
	        		<%= attachment_image_tag(recipe, :image, fallback: "no_image2.jpg", size: '100x100') %>
	        	</div>
	        <% end %>
	        <div class="col-md-4">
	    		<p><%= recipe.title %></p>
	       		<p><%= recipe.body %></p>
	       	</div>
	       	<div class="col-md-4">
	       		<p>お気に入り <%= recipe.likes.count %></p>
	       		<p>コメント <%= recipe.comments.count %></p>
	       		<p><%= recipe.quantity %>人前</p>
	       		<p><%= recipe.price %>円前後</p>
	       	</div>
        <% end %>
    </div>
</div>

