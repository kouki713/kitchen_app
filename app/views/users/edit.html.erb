<div class="container">
    <div class="row">
    	<div class="col-md-10 col-md-offset-1">
			<h4>編集画面</h4>
			<%= form_for(@user) do |f| %>
				<%= render 'layouts/error', model: @user %>
				<div class="col-md-6">
					<%= f.label :image, "プロフィール画像" %>
					<div class="product-image">
	            		<%= attachment_image_tag @recipe, :image, class: "img-square", fallback: "no_image2.jpg", size: '450x400' %>
	          		</div>
						<%= f.attachment_field :image, class: "img-circle" %>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<%= f.label :name, "名前" %>
						<%= f.text_field :name, placeholder: "名前", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :email, "メールアドレス" %>
						<%= f.text_field :email, placeholder: "メールアドレス", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :introduction, "自己紹介文" %>
						<%= f.text_area :introduction, placeholder: "自己紹介文", :size => "61x5", class: "form-control" %>
					</div>
				</div>
				<div class="col-md-12 text-center">
					<%= f.submit '編集内容を保存する', class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>