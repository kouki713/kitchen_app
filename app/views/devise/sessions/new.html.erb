<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="text-center">
        <span class="glyphicon glyphicon-cutlery"></span>
      </h1>
      <h3 class="text-center">10分キッチンにログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg", style: "width: 100%" %>
        </div>
      <% end %>
      <h4 class="text-center">
        <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>・
        <%= link_to "新規会員登録", new_registration_path(resource_name) %>
      </h4>
    </div>
    </div>
    </div>
  </div>
</div>
