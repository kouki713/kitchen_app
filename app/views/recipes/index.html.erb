<div class="container">
    <div class="row">
    	<p class="text-center">レシピ一覧ページ</p>
    	<div class="col-md-4 text-center">
	    	<p>タグ</p>
	    	<% @tags.each do |tag| %>
	    			<p>・<%= tag.name %></p>
	    	<% end %>
	    	<p>ジャンル</p>
	    	<% @genres.each do |genre| %>
	    		<%= link_to recipes_path(genre_id: genre.id) do %>
	    			<p>・<%= genre.name %></p>
	    		<% end %>
	    	<% end %>
	    	<p>種別</p>
	    	<% @types.each do |type| %>
	    		<%= link_to recipes_path(type_id: type.id) do %>
	    			<p>・<%= type.name %></p>
	    		<% end %>
	    	<% end %>
    	</div>
    	<div class="col-md-8">
    		<p><%= @title %></p>
    		<table class="table">
    			<tbody>
	    			<% @recipes.each do |recipe| %>
			    		<tr>
				    		<td>
				    			<%= link_to recipe_path(recipe) do %>
				    			<%= attachment_image_tag(recipe, :image, fallback: "no_image2.jpg", size: '200x200') %>
				    			<% end %>
				    		</td>
				    		<td>
				    			<div class="col-md-10">
				    				<%= recipe.title %>
				    			</div>
				    			<div class="col-md-2">
				    				<span class="glyphicon glyphicon-heart-empty"><%= recipe.likes.count %></span>
				    			</div>
				    			<div class="col-md-6">
				    				<%= recipe.user.name %>さん
				    			</div>
				    			<div class="col-md-3">
				    				<%= recipe.quantity %>人前
				    			</div>
				    			<div class="col-md-3">
				    				<%= recipe.price %>円前後
				    			</div>
				    			<div class="col-md-12">
				    				<%= recipe.body %>
				    			</div>
				    		</td>
			    		</tr>
			    	<% end %>
			    </tbody>
			</table>
	    </div>
    </div>
</div>