<div class="container">
    <div class="row">
    	<div class="col-md-3">
    		<div class="panel panel-default">
                <div class="panel-heading">
                   	<h4>タグ</h4>
                </div>
                <div class="panel-body">
					<% @tags.each do |tag| %>
				    	<%= link_to recipes_path(tag_id: tag.id) do %>
				    		<h4>・<%= tag.name %></h4>
				    	<% end %>
				    <% end %>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
	    			<h4>ジャンル</h4>
	    		</div>
	    		<div class="panel-body">
			    	<% @genres.each do |genre| %>
			    		<%= link_to recipes_path(genre_id: genre.id) do %>
			    			<h4>・<%= genre.name %></h4>
			    		<% end %>
			    	<% end %>
			    </div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
	    			<h4>種別</h4>
	    		</div>
	    		<div class="panel-body">
			    	<% @types.each do |type| %>
			    		<%= link_to recipes_path(type_id: type.id) do %>
			    			<h4>・<%= type.name %></h4>
			    		<% end %>
			    	<% end %>
			    </div>
			</div>
    	</div>
    	<div class="col-md-9">
    		<h4><%= @title %></h4>
    		<table class="table">
    			<tbody>
	    			<% @recipes.each do |recipe| %>
			    		<tr>
				    		<td>
				    			<%= link_to recipe_path(recipe) do %>
				    			<%= attachment_image_tag(recipe, :image, fallback: "no_image2.jpg", size: '280x230') %>
				    			<% end %>
				    		</td>
				    		<td>
				    			<div class="col-md-12">
				    				<h5><%= recipe.title %></h5>
				    			</div>
				    			<div class="col-md-12">
				    				<h5><%= simple_format(recipe.body) %></h5>
				    			</div>
				    			<div class="col-md-12">
				    				<h5>分量：<%= recipe.quantity %>人前</h5>
				    				<h5>費用：<%= recipe.price %>円前後</h5>
				    			</div>
				    			<div class="col-md-3">
				    				<%= link_to user_path(recipe.user) do %>
				    					<%= attachment_image_tag(recipe.user, :image, fallback: "no_image.jpg", size: '70x70', class: "img-circle") %>
				    				<% end %>
				    			</div>
				    			<div class="col-md-9">
				    				<h5><%= recipe.user.name %>さんのレシピ</h5>
				    				<p>
										<span class="glyphicon glyphicon-heart" style="color: tomato;"><%= recipe.likes.count %></span>&nbsp;
										<span class="glyphicon glyphicon-comment"><%= recipe.comments.count %></span>
									</p>
				    			</div>
				    			<div class="col-md-12 text-right">
				    				<h5><%= link_to "レシピ詳細を見る", recipe_path(recipe) %></h5>
				    			</div>
				    		</td>
			    		</tr>
			    	<% end %>
			    </tbody>
			</table>
	    </div>
    </div>
</div>