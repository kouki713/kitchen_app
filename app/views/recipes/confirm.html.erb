<!-- 投稿確認ページ -->
<div class="container recipe-confirm">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
  		<h3><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> レシピ投稿確認</h3>
  	</div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-7">
        <%= attachment_image_tag(@recipe, :image, fallback: "no_image2.jpg", size: '400x350') %>
      </div>
      <div class="col-md-5">
        <h4><%= @recipe.title %></h4>
        <% @recipe.tags.each do |tag| %>
          <span class="badge"><%= tag.name %></span>
        <% end %>
        <h5><%= simple_format(@recipe.body) %></h5>
      </div>
      <div class="col-md-5">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="active">ジャンル</td>
              <td><%= @recipe.genre.name %></td>
            </tr>
            <tr>
              <td class="active">種別</td>
              <td><%= @recipe.type.name %></td>
            </tr>
            <tr>
              <td class="active">分量</td>
              <td><%= @recipe.quantity %>人前</td>
            </tr>
            <tr>
              <td class="active">価格</td>
              <td><%= @recipe.price %>円前後</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row confirm-content">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-7">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 作り方</p>
          </div>
          <div class="panel-body">
            <p><%= simple_format(@recipe.make) %></p>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="panel panel-default">
          <div class="panel-heading">
            <p><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 材料</p>
          </div>
          <div class="panel-body">
            <p><%= simple_format(@recipe.material) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-xs-4 col-sm-offset-4 col-xs-offset-4 confirm-btn">
      <%= link_to "完了", user_path(@recipe.user), class: "btn btn-success btn-lg", style: "width: 100%;" %>
    </div>
    <div class="col-sm-4 col-xs-4 col-sm-offset-4 col-xs-offset-4 confirm-btn">
      <%= link_to "修正する", edit_recipe_path(@recipe), class: "btn btn-primary btn-lg", style: "width: 100%;" %>
    </div>
  </div>
</div>


