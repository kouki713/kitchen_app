<div class="container notification">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h3 class="text-center">通知</h3>
			<!-- 自分への通知をchecked:trueに変更するためビューに記述 -->
			<% notifications = @notifications.where.not(visiter_id: current_user.id) %>
			    <%= link_to destroy_all_notifications_path, method: :delete do %>
			        <h5><i class="fas fa-trash"></i> 全削除</h5>
			    <% end %>
			    <hr>
			<% if notifications.exists? %>
			    <div class="users-index">
			        <%= render notifications %>
			    </div>
			<% else %>
			    <h4>通知はありません</h4>
			<% end %>
			<h2><%= link_to "戻る", :back, class: "top-button" %></h2>
		</div>
	</div>
</div>_